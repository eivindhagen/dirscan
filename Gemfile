source 'https://rubygems.org'

gem 'json', '1.7.6'


gem 'bindata'

gem 'sqlite3'

group :development do
  # file-system notifications
  gem 'rb-inotify', :require => false
  gem 'rb-fsevent', :require => false
  gem 'rb-fchange', :require => false

  #
  # guard plugins (they pull in guard itself as well)
  #

  gem 'guard', '1.0.0'

  # guard can run 'bundle' when the Gemfile changes
  gem 'guard-bundler', '0.1.3'
	# guard can figure out when to do things based on which files change
  gem 'guard-test', '0.4.3'
  # notify using the terminal window's title (name)
  gem 'terminal-notifier-guard'

  gem 'simplecov'

  gem 'rake'

  gem 'debugger'
  gem 'mynyml-redgreen'

  gem 'debugger'
end

gem 'data_mapper'
gem 'dm-sqlite-adapter'
